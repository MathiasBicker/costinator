<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".CostgroupBusinessAssesment" >

    <!-- default layout activity costgroup business assesment -->

    <TextView
        android:id="@+id/costgroup_business_assesment_costgroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/costgroup"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <View
        android:id="@+id/lineMain"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_alignLeft="@+id/business_assesment_elements"
        android:layout_alignTop="@+id/business_assesment_elements"
        android:background="@color/Black" />

    <TextView
        android:id="@+id/business_assesment_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/costgroup_business_assesment_costgroup"
        android:layout_below="@+id/costgroup_business_assesment_costgroup" />

    <TextView
        android:id="@+id/costgroup_business_assesment_elements"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/business_assesment_elements"
        android:layout_alignTop="@+id/business_assesment_elements" />

    <TextView
        android:id="@+id/costgroup_business_assesment_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/business_assesment_elements"
        android:layout_below="@+id/costgroup_business_assesment_elements" />

    <Button
        android:id="@+id/costgroup_business_assesment_costgroup_land"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/btn_pie_chart" />

</RelativeLayout>