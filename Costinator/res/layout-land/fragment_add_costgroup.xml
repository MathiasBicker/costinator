<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minWidth="1000dp"
	android:minHeight="200dp"
    android:orientation="vertical" >
    

    <TextView
        android:id="@+id/fragment_dialog_add_costgroup_title" 
        android:text="@string/title_dialog_add_costgroup" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <View
        android:id="@+id/lineMainCostgroupDialog"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:layout_marginTop="2dp"
        android:background="@color/Black" />
      
    <EditText
        android:id="@+id/fragment_dialog_add_costgroup_name"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content" 
        android:layout_marginTop="10dp"
        android:hint="@string/hint_dialog_name_costgroup"
        android:imeOptions="actionDone"
        android:inputType="text" />
    
     <EditText
        android:id="@+id/fragment_dialog_add_costgroup_description"
        android:layout_width="match_parent"  
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" 
        android:hint="@string/desc_hint"
        android:imeOptions="actionDone"
        android:inputType="text" />

     <Button
         android:id="@+id/buttonSaveCostgroup"
         android:layout_width="@dimen/button_width"
         android:layout_height="@dimen/button_height"
         android:layout_gravity="center_horizontal"
         android:layout_marginTop="10dp"
         android:background="@color/OrangeDark"
         android:text="@string/ButtonSave" />
    
</LinearLayout>
